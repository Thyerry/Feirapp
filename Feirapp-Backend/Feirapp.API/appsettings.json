{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:u}] [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithExceptionDetails" ]
  },
//  "Kestrel": {
//    "Endpoints": {
//      "Http": {
//        "Url": "http://*:8080"
//      }
//    }
//  },
  "ConnectionStrings": {
    "PostgresConnection": "Host=localhost;Port=5432;Database=feirapp-db;Username=feirapp-user;Password=feirapp-password"
  },
  "DataSources": {
    "SefazUrl": "http://nfce.sefaz.pe.gov.br/nfce/consulta?p={INVOICE_CODE}",
    "OpenFoodFacts": "https://world.openfoodfacts.org/api/v0/",
    "CestCodeUrl": "https://codigocest.com.br/consulta-codigo-cest-pelo-ncm"
  },
  "JwtSettings": {
    "SecretKey": "1234567890123456412345678901234564",
    "Issuer": "feirapp.com",
    "Audience": "feirapp.com",
    "TokenLifetime": "00:30:00"
  },
  "AllowedHosts": "*"
}